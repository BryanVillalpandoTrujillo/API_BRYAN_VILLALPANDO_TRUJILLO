pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clonar el repositorio de GitHub que contiene la API ASP.NET
                git 'https://github.com/BryanVillalpandoTrujillo/API_BRYAN_VILLALPANDO_TRUJILLO.git'
            }
        }
        stage('Restore Dependencies') {
            steps {
                // Restaurar las dependencias del proyecto utilizando dotnet
                bat 'dotnet restore'
            }
        }
        stage('Build') {
            steps {
                // Compilar la aplicación
                bat 'dotnet build'
            }
        }
        stage('Test') {
            steps {
                // Ejecutar las pruebas unitarias de la API ASP.NET
                bat 'dotnet test'
            }
        }
   }}
}}

